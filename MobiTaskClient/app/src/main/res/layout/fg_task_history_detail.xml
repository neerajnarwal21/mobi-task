<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentSV"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="Task Title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/taskHeadTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="2dp"
            android:text="dscvnkdv"
            android:textColor="@color/Black"
            android:textSize="@dimen/_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_18sp" />

            <LinearLayout
                android:id="@+id/audioLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/audioIV"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_m_play_color_p" />

                <ProgressBar
                    android:id="@+id/downloadPB"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_m_play_color_p"
                    android:theme="@style/colorPrimaryTheme"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/audioTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Audio"
                    android:textColor="@color/DimGray" />
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/recordL"
            layout="@layout/inc_sound_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/taskDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="2dp"
            android:text="dscvnkdv"
            android:textColor="@color/Black"
            android:textSize="@dimen/_16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/bg"
            android:orientation="horizontal"
            android:padding="@dimen/_10dp">

            <TextView
                android:id="@+id/inTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16sp" />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_4dp"
                android:background="@color/DimGray" />

            <TextView
                android:id="@+id/outTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/locIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/taskAddressTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/Black_trans"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:text="#3344,Phase 5, Sector 59, Sahibzada Ajit Singh Nagar, Punjab, India"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/signInTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="SignIn Time : "
            android:textColor="@color/Green"
            android:textSize="@dimen/_18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/signInlocIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_location" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey" />

                <ImageView
                    android:id="@+id/signInPicIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_add" />
            </LinearLayout>

            <TextView
                android:id="@+id/signInAddressTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/Black_trans"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:text="#3344,Phase 5, Sector 59, Sahibzada Ajit Singh Nagar, Punjab, India"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/signOutTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="SignOut Time : "
            android:textColor="@color/Brown"
            android:textSize="@dimen/_18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/signOutlocIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_location" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey" />

                <ImageView
                    android:id="@+id/signOutPicIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_add" />
            </LinearLayout>

            <TextView
                android:id="@+id/signOutAddressTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/Black_trans"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:text="#3344,Phase 5, Sector 59, Sahibzada Ajit Singh Nagar, Punjab, India"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            android:text="Workdone"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/workDoneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/Black"
            android:textSize="@dimen/_14sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240dp"
            android:layout_marginTop="10dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/clickV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/emptyTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/bg"
                android:gravity="center"
                android:padding="40dp"
                android:text="No Timeline to this task"
                android:textColor="@color/DarkGray"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>
</ScrollView>