<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/mainCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4dp"
        app:cardElevation="@dimen/_2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp">

                <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:text="Date:\n12/09/17"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textSize="@dimen/_14sp" />-->

                <!--<View-->
                    <!--android:layout_width="@dimen/_1dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_margin="@dimen/_4dp"-->
                    <!--android:background="@color/DimGray" />-->

                <TextView
                    android:id="@+id/inTimeTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sp" />

                <View
                    android:layout_width="@dimen/_1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_4dp"
                    android:background="@color/DimGray" />

                <TextView
                    android:id="@+id/outTimeTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskNoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/DarkSlateGray"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_7dp"
                    android:paddingStart="@dimen/_7dp"
                    android:text="task\n1"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/taskTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Task : "
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:id="@+id/taskHeadTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/taskTV"
                            android:layout_toStartOf="@+id/msgCountTV"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/DarkGray"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:id="@+id/msgCountTV"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/skyblue_button"
                            android:gravity="center"
                            android:textColor="@color/White"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/locationTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location : "
                            android:textColor="@color/LimeGreen"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:id="@+id/addressTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/DarkGray"
                            android:textSize="@dimen/_16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>